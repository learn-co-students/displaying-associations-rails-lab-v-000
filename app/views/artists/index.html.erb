<h1>Artists</h1>

<ul>
  <% @artists.each do |artist| %>
    <li>
      <%= link_to( artist.name, artist_path(artist) ) %>, 
      <%= pluralize(artist.song_count, "song") %>
      
      <p>
        <%= form_tag artist_path(artist), method: "delete" do %>
          <%= submit_tag "Delete #{artist.name}" %>
        <% end %>
      </p>
    </li>
  <% end %>
</ul>