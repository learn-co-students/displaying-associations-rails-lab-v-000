<% @artists.each do |artist| %>
  <p>
    Artist Name: <%= artist.name %> <br />
    Artist Song Count: <%= pluralize(artist.song_count, "song") %> 
  </p>
  <ul>
    <% artist.songs.each do |song| %>
      <li>
        <%= link_to song.title, song_path(song) %>
      </li>
    <% end %>
  </ul>
<% end %>
