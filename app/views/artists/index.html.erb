<h1>Our Collection of Artists</h1>

<% if @artists.any? %>
    <%= pluralize(@artists.count, 'Artitst') %>
    <ul>
        <% @artists.each do |a| %>
            <li><%= link_to a.name, artist_path(a) %>, <%= pluralize(a.songs.count, 'song') %></li>
            
        <% end %>
    </ul>
<% end %>