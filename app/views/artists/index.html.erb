<h1>Artists</h1>

<ul>
  <% @artists.each do |artist| %>
    <li>
      <%= link_to artist.name, artist_path(artist) %>
      <%= artist.song_count %> <%= "song".pluralize(artist.song_count) %>
      <% artist.songs.each do |song| %>
        <ul>
          <li><% link_to song.title, song_path(song) %></li>
        </ul>
      <% end %>
    </li> 
  <% end %> 
</ul>
