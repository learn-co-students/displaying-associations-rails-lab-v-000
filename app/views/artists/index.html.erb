<% @artists.each do |artist|%>
    <ul>
        <li><%= link_to artist.name, artist_path(artist) %> | <%= "#{artist.song_count} songs" %></li>
        <ul>
            <% artist.songs.each do |song| %>
                <li><%= link_to song.title, song_path(song)%></li>
            <% end %>
        </ul>
    </ul>
<% end %>