<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if song.errors[:title].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors"
  <% end %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
